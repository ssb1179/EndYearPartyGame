<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstbackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/welcome_font_bold"
            android:text="   우당탕탕 망년회 게임판"
            android:textColor="@color/black"
            android:textSize="35pt" />

        <Button
            android:id="@+id/btnGameStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/welcome_font_regular"
            android:padding="0dp"
            android:text="시작하기"
            android:textColor="@color/black"
            android:textSize="20pt" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/welcome_font_regular"
            android:padding="0dp"
            android:text="도움!"
            android:textColor="@color/black"
            android:textSize="20pt" />

        <Button
            android:id="@+id/btnGoOutside."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/welcome_font_regular"
            android:padding="0dp"
            android:text="나가기"
            android:textColor="@color/black"
            android:textSize="20pt" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>